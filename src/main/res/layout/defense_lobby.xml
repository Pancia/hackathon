<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="45dp"
        android:gravity="center"
        android:text="Number of Active Defenders:"
        android:id="@+id/defenselobby_textview_prompt"
        android:layout_above="@+id/defenselobby_textview_numdefense"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/defenselobby_textview_numdefense"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="45dp"
        android:text="Number of Defense"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit Defense Lobby"
        android:textSize="50dp"
        android:id="@+id/defenselobby_button_exit"
        android:layout_below="@+id/defenselobby_textview_numdefense"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>